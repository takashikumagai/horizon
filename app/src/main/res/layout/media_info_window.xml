<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/bgSemiDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mi_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:text="Title"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_title_val"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/mi_title_val"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/mi_title"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/mi_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Track"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_track_val"
        app:layout_constraintTop_toBottomOf="@+id/mi_title" />

    <TextView
        android:id="@+id/mi_track_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/mi_track"
        app:layout_constraintTop_toBottomOf="@+id/mi_title_val"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/mi_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Artist"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_artist_val"
        app:layout_constraintTop_toBottomOf="@+id/mi_track" />

    <TextView
        android:id="@+id/mi_artist_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/mi_artist"
        app:layout_constraintTop_toBottomOf="@+id/mi_track_val"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/mi_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="Album"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_album_val"
        app:layout_constraintTop_toBottomOf="@+id/mi_artist" />

    <TextView
        android:id="@+id/mi_album_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/mi_album"
        app:layout_constraintTop_toBottomOf="@+id/mi_artist_val"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/mi_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Year"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_year_val"
        app:layout_constraintTop_toBottomOf="@+id/mi_album" />

    <TextView
        android:id="@+id/mi_year_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/mi_year"
        app:layout_constraintTop_toBottomOf="@+id/mi_album_val"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/mi_bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Bit rate"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/mi_bitrate_val"
        app:layout_constraintTop_toBottomOf="@+id/mi_year" />

    <TextView
        android:id="@+id/mi_bitrate_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/mi_bitrate"
        app:layout_constraintTop_toBottomOf="@+id/mi_year_val"
        tools:layout_editor_absoluteX="146dp" />

</androidx.constraintlayout.widget.ConstraintLayout>